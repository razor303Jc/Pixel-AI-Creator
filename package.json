{
  "name": "pixel-ai-creator-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Pixel AI Creator",
  "scripts": {
    "test": "playwright test",
    "test:frontend": "playwright test tests/frontend/ --reporter=html,json,junit",
    "test:api": "newman run tests/api/postman-collection.json --reporters cli,json",
    "test:all": "npm run test:frontend && npm run test:api",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "install-browsers": "playwright install"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "playwright": "^1.55.0",
    "newman": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0"
  }
}
